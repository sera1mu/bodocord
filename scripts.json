{
  "$schema": "https://deno.land/x/denon@2.4.9/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run --no-check ./src/boot.ts",
      "allow": ["env", "net", "read"],
      "unstable": true,
      "importmap": "./deps.json",
      "watch": false
    },
    "test": {
      "cmd": "deno test",
      "importmap": "deps.json",
      "watch": false
    },
    "lint": {
      "cmd": "deno lint",
      "watch": false
    },
    "fmt": {
      "cmd": "deno fmt",
      "watch": false
    },
    "fmt:check": {
      "cmd": "deno fmt --check",
      "watch": false
    }
  }
}
